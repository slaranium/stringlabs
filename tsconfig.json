{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["es2022", "dom", "dom.iterable"],
		"paths": {
			"@/assets/*": ["src/assets/*"],
			"@/components/*": ["src/components/*"],
			"@/data/*": ["src/data/*"],
			"@/layouts/*": ["src/layouts/*"],
			"@/utils/*": ["src/utils/*"],
			"@/types": ["src/types.ts"], // Menambahkan wildcard untuk mendukung banyak tipe
			"@/site-config": ["src/site.config.ts"],
			"@/plugins/*": ["src/plugins/*"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*", ".vscode", "dist"]
}
